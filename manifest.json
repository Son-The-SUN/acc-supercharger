{
  "manifest_version": 3,
  "name": "ACC Supercharger",
  "version": "1.1.0",
  "description": "Expands Autodesk Construction Cloud's capabilities with enhanced features and integrations.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://acc.autodesk.com/*",
    "https://developer.api.autodesk.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://acc.autodesk.com/*"],
      "js": [
        "lib/aps-constants.js",
        "lib/users-api.js",
        "lib/companies-api.js",
        "lib/projects-api.js",
        "api.js",
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
